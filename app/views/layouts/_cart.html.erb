<div class="relative" id="cart">
  <%= image_tag("shopping-cart.png", class: "w-10 object-cover invert") %>
  <% if cart && cart.cart_items.any? %>
    <div class="absolute top-0 -right-3 bg-purple-500 px-1.5 text-sm text-indigo-100 rounded-lg"> 
      <%= cart.cart_items.count %>
    </div>
  <% end %>
</div>